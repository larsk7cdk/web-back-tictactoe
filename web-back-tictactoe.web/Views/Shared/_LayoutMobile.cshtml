<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicTacToe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
       <partial name="_Menu"/>
    </header>

    <main class="container body-content">
        @RenderSection("Mobile", false)
        @{
            if (IsSectionDefined("Desktop"))
            {
                IgnoreSection("Desktop");
            }
        }
        @RenderBody()
    </main>

    <footer class="container">
        <hr />
        <p>&copy; 2019 - Tic Tac Toe</p>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", false)
    <environment include="Development">
        <script src="~/app/js/scripts1.js"></script>
        <script src="~/app/js/scripts2.js"></script>
    </environment>
</body>
</html>